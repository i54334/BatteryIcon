<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="BatteryView">
        <attr name="border_width" format="dimension"/>
        <attr name="border_color" format="color|reference"/>
        <attr name="number_text_size" format="dimension"/>
        <attr name="progress_color" format="color|reference"/>
        <attr name="show_type">
            <enum name="fill" value="0"/>
            <enum name="number" value="1"/>
        </attr>
        <attr name="head_orientation">
            <flag name="left" value="0"/>
            <flag name="right" value="2"/>
        </attr>
    </declare-styleable>
</resources>